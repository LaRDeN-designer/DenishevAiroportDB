@page
@model AirportDateBase.Pages.Crews.IndexModel

@{
    ViewData["Title"] = "Экипажи";
}

<h1>Экипажи</h1>

<p>
    <a asp-page="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Crew[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crew[0].Employee_1ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crew[0].Employee_2ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crew[0].Employee_3ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crew[0].Hours_flown)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Crew) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @{
                    try
                    {
                        @Model.Employee.First(r => r.ID == item.Employee_1ID).FIO
                    }
                    catch
                    {
                        <p>Нет</p>
                    }
                }
            </td>
            <td>
                @{
                    try
                    {
                        @Model.Employee.First(r => r.ID == item.Employee_2ID).FIO
                    }
                    catch
                    {
                        <p>Нет</p>
                    }
                }
            </td>
            <td>
                @{
                    try
                    {
                        @Model.Employee.First(r => r.ID == item.Employee_3ID).FIO
                    }
                    catch
                    {
                        <p>Нет</p>
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours_flown)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
