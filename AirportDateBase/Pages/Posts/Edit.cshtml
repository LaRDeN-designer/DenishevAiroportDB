@page
@model AirportDateBase.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактировать</h1>

<h4>должность:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Posts.ID" />
            <div class="form-group">
                <label asp-for="Posts.Name_Post" class="control-label"></label>
                <input asp-for="Posts.Name_Post" class="form-control" />
                <span asp-validation-for="Posts.Name_Post" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posts.Request" class="control-label"></label>
                <input asp-for="Posts.Request" class="form-control" />
                <span asp-validation-for="Posts.Request" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posts.Charge" class="control-label"></label>
                <input asp-for="Posts.Charge" class="form-control" />
                <span asp-validation-for="Posts.Charge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posts.Salary" class="control-label"></label>
                <input asp-for="Posts.Salary" class="form-control" />
                <span asp-validation-for="Posts.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
