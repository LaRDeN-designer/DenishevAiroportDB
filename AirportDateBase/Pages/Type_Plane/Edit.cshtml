@page
@model AirportDateBase.Pages.Type_Plane.EditModel

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактировать</h1>

<h4>тип самолета</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Type_plane.ID" />
            <div class="form-group">
                <label asp-for="Type_plane.Name_plane" class="control-label"></label>
                <input asp-for="Type_plane.Name_plane" class="form-control" />
                <span asp-validation-for="Type_plane.Name_plane" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type_plane.Limit" class="control-label"></label>
                <input asp-for="Type_plane.Limit" class="form-control" />
                <span asp-validation-for="Type_plane.Limit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type_plane.Purpose" class="control-label"></label>
                <input asp-for="Type_plane.Purpose" class="form-control" />
                <span asp-validation-for="Type_plane.Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
